@model JopPortal.Models.Job

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/edit-job.css">
</head>
<body>

    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="JobId" />
                <div class="form-group">
                    <label asp-for="JobCategory" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="JobCategory" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobCategory>()"></select>
                        <span asp-validation-for="JobCategory" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="JobType" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="JobType" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobType>()"></select>
                        <span asp-validation-for="JobType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="JopLocation" class="control-label"></label>
                    <input asp-for="JopLocation" class="form-control clr" />
                    <span asp-validation-for="JopLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JopSalary" class="control-label"></label>
                    <input asp-for="JopSalary" class="form-control clr" />
                    <span asp-validation-for="JopSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AvailablePlaces" class="control-label"></label>
                    <input asp-for="AvailablePlaces" class="form-control clr" />
                    <span asp-validation-for="AvailablePlaces" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobDate" class="control-label"></label>
                    <input asp-for="JobDate" class="form-control clr" />
                    <span asp-validation-for="JobDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobDescription" class="control-label"></label>
                    <input asp-for="JobDescription" class="form-control clr" />
                    <span asp-validation-for="JobDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobStatus" class="control-label"></label>
                    <input asp-for="JobStatus" class="form-control clr" />
                    <span asp-validation-for="JobStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
